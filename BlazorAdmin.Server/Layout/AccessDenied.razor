@page "/Account/AccessDenied"
@layout BaseLayout
@namespace BlazorAdmin.Server
@using BootstrapBlazor.Components
@using BlazorAdmin.Application;
@using BlazorAdmin.Extension;
@using BlazorAdmin.Common
<div class="d-flex flex-column justify-content-center align-items-center vh-100">
    <div>
        <img alt="401" src="@($"{WebsiteConst.DefaultResourceUrl}images/401.png")" class="mw-100" />
    </div>
    <h5>@Localizer["401"]</h5>
    <div>

        <Button class="mx-2" Color="Color.Primary" OnClick=@(()=>
                {
                var url = AppService.GetReturnUrl(ReturnUrl);
                NavigationManager.NavigateTo(url,true);
                }
                )>
            @Localizer["Login"]
        </Button>
        <Button class="mx-2" Color="Color.Primary" OnClick=@(()=>NavigationManager.NavigateTo("/",true))>@Localizer["Home"]</Button>
    </div>
</div>

