@page "/usercenter"
@attribute [Authorize]
@attribute [RolePermission]
@inherits ComponentDefault
@using BlazorAdmin.Application
@namespace BlazorAdmin.Razor

<Tab Height="500">
    <TabItem Text=@Localizer["UserInfo"]>
        <UserInfoEditComponent Model="SysUser" OnSave="OnSaveUserInfo" />
    </TabItem>
    <TabItem Text=@Localizer["UpdatePasswordInfo"]>
        <UserPassowrdEditComponent Model="UpdatePasswordInput" OnSave="OnSavePassword" />
    </TabItem>
    <TabItem Text=@Localizer["WorkbenchInfo"]>
        <EditPagePolicy Model="WorkbenchInfo" OnSave="OnSaveWorkbench" />
    </TabItem>
</Tab>



